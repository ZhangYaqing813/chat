
<seelog type="asynctimer" asyncinterval="1000000" minlevel="info" maxlevel="error">
    <outputs formatid="main">

        <!-- 输出到文件，且不同于终端的日志格式 -->
        <splitter formatid="format1">
            <filter levels="error">
                <file path="./error.log"/>
            </filter>>
            <filter levels="info">
                <file path="./info.log"/>
            </filter>>
            <filter levels="warn">
                <file path="./warning.log"/>
            </filter>>
        </splitter>
    </outputs>

    <formats>
        <!-- 设置格式 -->
        <format id="main" format="%UTCDate %UTCTime - [%LEV] - %RelFile - l%Line - %Msg%n"/>
        <format id="format1" format="%Date(2006-06-02 3:04:05.000000000 PM MST) [%Level] %Msg%n"/>
    </formats>

</seelog>
